@model IEnumerable<ToDoList2.Models.Category>

@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>To Do List</h2>
<hr />
<table class="table">
    
    @foreach (var listCat in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => listCat.Name)
            </td>
         
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = listCat.CategoryId }) |
                @Html.ActionLink("Details", "Details", new { id = listCat.CategoryId }) |
                @Html.ActionLink("Delete", "Delete", new { id = listCat.CategoryId })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Create New", "Create")
</p>